<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_battleships_v4">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_battleships"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_battleships_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.project_battleships_v4.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.project_battleships_v4.LoggedMainActivity" />
        <activity android:name="com.example.project_battleships_v4.PlaceShipsActivity" />
        <activity android:name="com.example.project_battleships_v4.ComputerTurnActivity" />
        <activity android:name="com.example.project_battleships_v4.PlayerTurnActivity" />
        <activity android:name="com.example.project_battleships_v4.LoginActivity" />
        <activity android:name="com.example.project_battleships_v4.RegisterActivity" />
        <activity android:name="com.example.project_battleships_v4.LeaderboardActivity"/>
        <activity android:name="com.example.project_battleships_v4.OnlinePlaceShipsActivity"/>
        <activity android:name="com.example.project_battleships_v4.OnlinePlayerTurnActivity"/>
        <activity android:name="com.example.project_battleships_v4.OnlineOpponentTurnActivity"/>
        <service android:name="com.example.project_battleships_v4.PlayService" />
    </application>

</manifest>